<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Blogs</h1>
    <div id="blogs-container">
        <!-- Initially empty, will be populated by JavaScript -->
    </div>
    <div class="flex justify-center items-center mt-8">
        <a href="/dashboard/blogs/create" class="btn btn-primary btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add New Blog
        </a>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // fetchUserBlogs();
    return;
});

async function fetchUserBlogs() {
    try {
        const token = localStorage.getItem('authToken');
        if (!token) {
            console.error('No token found in local storage');
            return;
        }

        const response = await fetch('dashboard/blogs/all', {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            }
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const blogs = await response.json();
        console.log('User blogs:', blogs);
        
        // Update the blogs container with the fetched blogs
        const blogsContainer = document.getElementById('blogs-container');
        blogsContainer.innerHTML = renderBlogs(blogs);
    } catch (error) {
        console.error('Error fetching user blogs:', error);
    }
}

function renderBlogs(blogs) {
    if (!blogs || blogs.length === 0) {
        return '<p class="text-center text-lg">No blogs found. Start writing your first blog!</p>';
    }

    return `
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            ${blogs.map(blog => `
                <div class="bg-base-100 p-6 rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold mb-2">${blog.title}</h2>
                    <p class="text-base-content mb-4">${blog.content.substring(0, 100)}...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-base-content opacity-75">
                            ${new Date(blog.createdAt).toLocaleDateString()}
                        </span>
                        <a href="/dashboard/blogs/${blog.id}" class="btn btn-primary btn-sm">Read More</a>
                    </div>
                </div>
            `).join('')}
        </div>
    `;
}
</script>